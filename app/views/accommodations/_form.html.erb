<div class="container-add-accommodation">
  <%= simple_form_for(@accommodation) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="form-new-accommodation">
    <h2>Add an accommodation</h2>
    <div class="form-inputs">
      <%= f.input :accommodation_type %>
      <%= f.input :guest_number %>
      <%= f.input :rooms_number %>
      <%= f.input :beds_number %>
      <%= f.input :toilet_number %>
      <%= f.input :address %>
      <%= f.input :price_per_night %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
    </div>


    <div class="form-actions">
      <%= f.button :submit, class: "btn-red new-accommodation" %>
    </div>
  </div>
  <% end %>
</div>
